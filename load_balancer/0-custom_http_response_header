#!/usr/bin/env bash
# Update package list and install Nginx

sudo apt-get update
sudo apt-get install -y nginx

# Get the hostname
HOSTNAME=$(hostname)

# Create a backup of the original Nginx config file
sudo cp /etc/nginx/nginx.conf /etc/nginx/nginx.conf.backup

# Add the custom header configuration to the Nginx config file
sudo sed -i '/http {/a \\tproxy_set_header X-Served-By $HOSTNAME;' /etc/nginx/nginx.conf

# Restart Nginx to apply the changes
sudo systemctl restart nginx

# Print success message
echo "Nginx is configured on $HOSTNAME with the custom header X-Served-By"
